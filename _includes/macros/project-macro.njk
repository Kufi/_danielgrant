{% macro project(imgSrc, url, title, desc, tags) %}

<div class="flex flex-col max-w-[23rem] sm:max-w-[26rem] border border-grey hover:border-white rounded-md mb-9 lg:mx-0 mx-auto">
    <a target="_blank" href={{url}}>
        <img class="rounded-t-[5px] h-[13.5rem] sm:h-[13.5rem] object-cover w-full" src={{imgSrc}} alt="" />
    </a>
    <div class="flex flex-col px-5 pt-2 pb-3 min-h-36 justify-between">
        <a class="font-semibold text-2xl hover:underline" target="_blank" href="{{url}}">{{title}}</a>
        <p class="text-grey">{{desc}}</p>
        <div class="self-end mt-1">
            {% for tag in tags %}
            <span class="bg-accent shadow-black shadow-md font-semibold px-1 ml-2">{{tag}}</span>
            {% endfor %}
        </div>
    </div>
</div>

{% endmacro %}